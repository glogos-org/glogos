{
  "name": "@glogos/core",
  "version": "1.0.0",
  "description": "Core library for Glogos minimal attestation protocol",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto/index.js",
      "types": "./dist/crypto/index.d.ts"
    },
    "./attestation": {
      "import": "./dist/attestation/index.js",
      "types": "./dist/attestation/index.d.ts"
    },
    "./zone": {
      "import": "./dist/zone/index.js",
      "types": "./dist/zone/index.d.ts"
    },
    "./canon": {
      "import": "./dist/canon/index.js",
      "types": "./dist/canon/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.3.2"
  },
  "devDependencies": {
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "glogos",
    "attestation",
    "sha256",
    "ed25519",
    "decentralized-identity"
  ],
  "author": "Le Manh Thanh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glogos-org/glogos.git",
    "directory": "sdk/typescript/core"
  }
}
